void col(float a)
{
  switch(int(a))
  {
  case 0:
    fill(255, 0, 0);
    break;
  case 1:
    fill(255, 0, 255);
    break;
  case 2:
    fill(100, 100, 255);
    break;
  case 3:
    fill(0, 255, 255);
    break;
  case 4:
    fill(0, 255, 0);
    break;
  case 5:
    fill(255, 255, 0);
    break;
  case 6:
    fill(255, 255, 255);
    break;
  }
}